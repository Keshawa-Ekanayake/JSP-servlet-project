<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.customer.loginservlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>
	<servlet>
    	<servlet-name>CustomerInsert</servlet-name>
    	<servlet-class>com.customer.Customerinsert</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>CustomerInsert</servlet-name>
    	<url-pattern>/insert</url-pattern>
    </servlet-mapping>
    <servlet>
    	<servlet-name>updateCustomer</servlet-name>
    	<servlet-class>com.customer.updateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>updateCustomer</servlet-name>
    	<url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet>
    	<servlet-name>deleteCustomer</servlet-name>
    	<servlet-class>com.customer.deletecusservlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>deleteCustomer</servlet-name>
    	<url-pattern>/delete</url-pattern>
    </servlet-mapping>
    
    </web-app>